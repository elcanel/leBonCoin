{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.name) }}</div>
    <div class="col-md-4">{{ form_row(form.mail) }}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.phone) }}</div>
</div>
{{ form_rest(form) }}
<button class="btn btn-info">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}